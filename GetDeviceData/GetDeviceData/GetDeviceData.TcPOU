      </Implementation>
    </Method>
    <Method Name="NextAmsNetId" Id="{1ff2f3dc-7063-41af-8123-50cf0ed0e824}">
      <Declaration><![CDATA[METHOD NextAmsNetId : Tc2_System.T_AmsNetID
VAR_INST
  count : UINT;
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[NextAmsNetId := NetIdArray[count];
count := count + 1;]]></ST>
      </Implementation>
    </Method>
    <Method Name="NextDeviceName" Id="{a5843e6a-434c-48ef-8f95-17c40493f7dc}">
      <Declaration><![CDATA[METHOD NextDeviceName : ZCore.ZString;
VAR_INST
  count : UINT;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[NextDeviceName := NameArray[count];
count := count + 1;]]></ST>
      </Implementation>
    </Method>
  </POU>
