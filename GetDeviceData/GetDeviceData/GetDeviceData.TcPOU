      <Declaration><![CDATA[PROPERTY EthercatMasterCount : UINT]]></Declaration>
      <Get Name="Get" Id="{de855259-9a12-43d0-803f-73205d170aaf}">
        <Declaration><![CDATA[VAR
END_VAR
]]></Declaration>
        <Implementation>
          <ST><![CDATA[EthercatMasterCount := _ethercatMasterCount;]]></ST>
        </Implementation>
      </Get>
    </Property>
